<Window x:Class="UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UI.WPF"
        
        xmlns:col="clr-namespace:System.Collections;assembly=mscorlib"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        
        mc:Ignorable="d"
        
        Title="SchoolLibrary" 
        MinHeight="500" MaxHeight="700" Height="700" 
        MaxWidth="1440" MinWidth="1350" Width="1440" >

        <ScrollViewer>
                <Grid Background="#141414" ShowGridLines="True" >
                        <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="1280" />
                                <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                                <RowDefinition Height="100" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="150" />
                        </Grid.RowDefinitions>
                        
                        <Grid Grid.Column="0" Grid.Row="0" x:Name="Header" ColumnSpan="3" Background="#1C1C1C" ShowGridLines="True" >
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="1280" />
                                        <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <Grid Grid.Column="1" x:Name="HeaderFrame" >
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="270" />
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="340" />
                                        </Grid.ColumnDefinitions>
                                        
                                        
                                        <StackPanel x:Name="HeaderFrame_LogoBar" Grid.Column="0" Orientation="Horizontal" 
                                                    HorizontalAlignment="Left" Margin="25 0 0 0" Cursor="Hand" >
                                                <Image x:Name="HeaderFrame_LogoBar_Img" Source="/Images/free-icon-books-7579057.png" 
                                                       MaxWidth="30" MaxHeight="30" />
                                                
                                                <TextBlock x:Name="HeaderFrame_LogoBar_Text" Text="SchoolLibrary" Margin="10" 
                                                           VerticalAlignment="Center" Foreground="White" FontSize="28"
                                                           FontFamily="Arial" FontWeight="Regular" TextDecorations="Underline" />
                                        </StackPanel>
                                        
                                        <StackPanel x:Name="HeaderFrame_MenuBar" Grid.Column="1" Orientation="Horizontal"
                                                    HorizontalAlignment="Center" >
                                                
                                                <Border x:Name="HeaderFrame_MenuBar_Catalog" Cursor="Hand"
                                                        VerticalAlignment="Center" MaxHeight="44"
                                                        Padding="10" CornerRadius="4" Margin="12.5 0"
                                                        MouseEnter="HeaderButtonHoverEnter" MouseLeave="HeaderButtonHoverLeave">
                                                        <StackPanel Orientation="Horizontal" >
                                                                <Image Source="../Images/menu.png"
                                                                       MaxHeight="15" MaxWidth="19" />
                                                                <TextBlock Text="Catalog"  Margin="10 0"
                                                                           Foreground="White" FontSize="22" 
                                                                           FontWeight="Regular" FontFamily="Arial" />
                                                                <Polygon Height="7" Points="0, 0, 10, 0, 5, 5"
                                                                         Fill="White" Margin="0 5 0 0" />
                                                        </StackPanel>         
                                                </Border>
                                                
                                                <Border x:Name="HeaderFrame_MenuBar_Search" Cursor="Hand"
                                                        VerticalAlignment="Center" MaxHeight="44"
                                                        Padding="10" CornerRadius="4" Margin="12.5 0"
                                                        MouseEnter="HeaderButtonHoverEnter" MouseLeave="HeaderButtonHoverLeave">
                                                        <StackPanel Orientation="Horizontal" >
                                                                <Image Source="../Images/magnifying-glass.png"
                                                                       MaxHeight="15" MaxWidth="15" />
                                                                <TextBlock Text="Search" Margin="10 0 0 0"
                                                                           Foreground="White" FontSize="22" 
                                                                           FontWeight="Regular" FontFamily="Arial" />
                                                        </StackPanel>
                                                </Border>
                                                
                                                <Border x:Name="HeaderFrame_MenuBar_Forum" Cursor="Hand"
                                                        VerticalAlignment="Center" MaxHeight="44"
                                                        Padding="10" CornerRadius="4" Margin="12.5 0"
                                                        MouseEnter="HeaderButtonHoverEnter" MouseLeave="HeaderButtonHoverLeave">
                                                        <StackPanel Orientation="Horizontal" >
                                                                <Image Source="../Images/forum.png"
                                                                       MaxHeight="18" MaxWidth="18" />
                                                                <TextBlock Text="Forum" Margin="10 0 0 0"
                                                                           Foreground="White" FontSize="22" 
                                                                           FontWeight="Regular" FontFamily="Arial"  />
                                                        </StackPanel>
                                                </Border>
                                                
                                                <Border x:Name="HeaderFrame_MenuBar_FAQ" Cursor="Hand"
                                                        VerticalAlignment="Center" MaxHeight="44"
                                                        Padding="10" CornerRadius="4" Margin="12.5 0"
                                                        MouseEnter="HeaderButtonHoverEnter" MouseLeave="HeaderButtonHoverLeave">
                                                        <StackPanel Orientation="Horizontal" >
                                                                <Image Source="../Images/help-circle-outline.png"
                                                                       MaxHeight="18" MaxWidth="18" />
                                                                <TextBlock Text="FAQ" Margin="10 0 0 0"
                                                                           Foreground="White" FontSize="22" 
                                                                           FontWeight="Regular" FontFamily="Arial"  />
                                                        </StackPanel>
                                                </Border>
                                                
                                                <Border x:Name="HeaderFrame_MenuBar_Another" Cursor="Hand"
                                                        VerticalAlignment="Center" MaxHeight="44"
                                                        Padding="10" CornerRadius="4" Margin="12.5 0"
                                                        MouseEnter="HeaderButtonHoverEnter" MouseLeave="HeaderButtonHoverLeave">
                                                        <Image Source="../Images/dots-horizontal.png"
                                                               MaxHeight="28" MaxWidth="28"/>
                                                </Border>
                                                
                                        </StackPanel>
                                        
                                        <StackPanel x:Name="HeaderFrame_AccountBar" Grid.Column="2"
                                                    Orientation="Horizontal" HorizontalAlignment="Right" >
                                                
                                                <Border x:Name="HeaderFrame_AccountBar_LoginBorder" 
                                                        BorderThickness="1" VerticalAlignment="Center" Margin="0 0 0 0" 
                                                        CornerRadius="6" Cursor="Hand"
                                                        MouseEnter="HeaderButtonHoverEnter" MouseLeave="HeaderButtonHoverLeave" >
                                                        <TextBlock  x:Name="HeaderFrame_AccountBar_LoginText"
                                                                    Text="Login" VerticalAlignment="Center" Padding="12 6"
                                                                    Foreground="White" FontSize="18" FontFamily="Arial" 
                                                                    FontWeight="Regular" />
                                                </Border>   
                                                  
                                                <Border x:Name="HeaderFrame_AccountBar_RegistrationBorder" 
                                                        BorderBrush="White" BorderThickness="1" VerticalAlignment="Center" 
                                                        Margin="25 0 20 0" CornerRadius="6" Cursor="Hand"
                                                        MouseEnter="HeaderButtonHoverEnter" MouseLeave="HeaderButtonHoverLeave" >
                                                        <TextBlock x:Name="HeaderFrame_AccountBar_RegistrationText" 
                                                                   Text="Registration" VerticalAlignment="Center" Padding="12 6"
                                                                   Foreground="White" FontSize="18" FontFamily="Arial" 
                                                                   FontWeight="Regular" />
                                                </Border>   
                                                
                                                <Border x:Name="HeaderFrame_AccountBar_ThemeBorder" 
                                                        BorderThickness="1" VerticalAlignment="Center" Cursor="Hand" Margin="0 0 10 0"
                                                        CornerRadius="3" Height="36" Width="36"
                                                        MouseEnter="HeaderButtonHoverEnter" MouseLeave="HeaderButtonHoverLeave" >
                                                        <Image x:Name="HeaderFrame_AccountBar_ThemeImg" 
                                                               Source="/Images/free-icon-night-1082231.png" MaxWidth="16" 
                                                               MaxHeight="16" VerticalAlignment="Center" />
                                                        
                                                        <Border.ToolTip>
                                                                <ToolTip Background="#333335" BorderThickness="0" BorderBrush="Transparent"
                                                                         Placement="RelativePoint" HorizontalOffset="-90" VerticalOffset="45">
                                                                        <TextBlock Text="Change the theme" Foreground="White" Padding="6"
                                                                                   FontFamily="Arial" FontSize="12" />
                                                                </ToolTip>
                                                        </Border.ToolTip>
                                                </Border>   
                                                
                                        </StackPanel>
                                </Grid>
                        </Grid>
                        
                        <Grid Grid.Column="1" Grid.Row="1" x:Name="BodyFrame" Margin="0 0 0 15" ShowGridLines="True" >
                               <Grid.ColumnDefinitions>
                                       <ColumnDefinition Width="*"></ColumnDefinition>
                                       <ColumnDefinition Width=".45*"></ColumnDefinition>
                               </Grid.ColumnDefinitions> 
                                
                                <StackPanel Grid.Column="0" x:Name="BodyFrame_MainBar" Orientation="Vertical" Margin="0 15 15 0">
                                        <Border Height="300" Background="#1C1C1C" CornerRadius="6">
                                        </Border>
                                        
                                        <Grid Margin="0 15">
                                                <Grid.ColumnDefinitions>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                </Grid.ColumnDefinitions> 
                                                
                                                <Border Grid.Column="0" Height="260" Background="#1C1C1C" CornerRadius="6" Margin="0 0 10 0" >
                                                </Border> 
                                                <Border Grid.Column="1" Height="260" Background="#1C1C1C" CornerRadius="6" Margin="10 0 0 0" >
                                                </Border> 
                                        </Grid>
                                        
                                        <Border MinHeight="300" Background="#1C1C1C" CornerRadius="6">
                                        </Border>
                                </StackPanel>
                                <StackPanel Grid.Column="1" x:Name="BodyFrame_RightBar" Orientation="Vertical" MaxWidth="410" Margin="15 15 0 0">
                                        <Border x:Name="BodyFrame_RightBar_TopActiveBorder" Background="#1C1C1C" CornerRadius="5" Margin="0 0 0 15">
                                                <StackPanel x:Name="BodyFrame_RightBar_TopActive" Orientation="Vertical">
                                                        <Border x:Name="BodyFrame_RightBar_TopActive_TitleBorder" Height="45" BorderThickness="0 0 0 1" 
                                                                BorderBrush="#E47F09" Margin="0 15 0 0" Padding="15 0" >
                                                                <TextBlock x:Name="BodyFrame_RightBar_TopActive_TitleText" Foreground="White" FontFamily="Arial" 
                                                                           FontSize="22" VerticalAlignment="Center" Text="Top active of the week"/>
                                                        </Border>
                                                        
                                                        <StackPanel x:Name="BodyFrame_RightBar_TopActive_UsersBox" Orientation="Vertical" Margin="0 10">
