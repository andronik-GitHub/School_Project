                                                                                        BorderThickness="1" BorderBrush="#CDCDCD" HorizontalAlignment="Left">
                                                                                        <Image Width="62" Height="62" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                                                                Source="/Images/free-icon-user-8763526.png" />
                                                                                </Border>
                                                                                
                                                                                <Grid Grid.Column="1" x:Name="BodyFrame_RightBar_TopActive_UsersBox_User1Border_Frame_Description">
                                                                                        <Grid.RowDefinitions>
                                                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                                                <RowDefinition Height="*"></RowDefinition>
                                                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                                        </Grid.RowDefinitions>
                                                                                        
                                                                                        <TextBlock Grid.Row="0" x:Name="BodyFrame_RightBar_TopActive_UsersBox_User1Border_Frame_UserName"
                                                                                                Text="Username" Foreground="White" FontFamily="A" FontSize="14" />
                                                                                        <TextBlock Grid.Row="2" x:Name="BodyFrame_RightBar_TopActive_UsersBox_User1Border_Frame_TopCounter"
                                                                                                Text="Books read: N" Foreground="White" FontFamily="A" FontSize="14" />
                                                                                </Grid>
                                                                                
                                                                                <TextBlock x:Name="BodyFrame_RightBar_TopActive_UsersBox_User1Border_Frame_TopNumber"
                                                                                        Grid.Column="2" Text="#1" Foreground="White" FontFamily="A" FontSize="20" FontWeight="Bold" 
                                                                                        TextAlignment="Center" HorizontalAlignment="Right" />
                                                                        </Grid>
                                                                </Border>
                                                                
                                                                <Border x:Name="BodyFrame_RightBar_TopActive_UsersBox_User10Border" MaxHeight="90" BorderThickness="0 0 0 0" BorderBrush="#535353"
                                                                        Margin="15 0 15 5" Padding="0 0 0 5" >
                                                                        <Grid x:Name="BodyFrame_RightBar_TopActive_UsersBox_User10Border_Frame">
                                                                                <Grid.ColumnDefinitions>
                                                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                                                        <ColumnDefinition Width="2*"></ColumnDefinition>
                                                                                        <ColumnDefinition Width="*"></ColumnDefinition>
                                                                                </Grid.ColumnDefinitions>
                                                                                
                                                                                <Border x:Name="BodyFrame_RightBar_TopActive_UsersBox_User10Border_Frame_UserImage" Grid.Column="0" Width="80" Height="80" 
                                                                                        BorderThickness="1" BorderBrush="#CDCDCD" HorizontalAlignment="Left">
                                                                                        <Image Width="62" Height="62" VerticalAlignment="Center" HorizontalAlignment="Center" 
                                                                                                Source="/Images/free-icon-user-8763526.png" />
                                                                                </Border>
                                                                                
                                                                                <Grid Grid.Column="1" x:Name="BodyFrame_RightBar_TopActive_UsersBox_User10Border_Frame_Description">
                                                                                        <Grid.RowDefinitions>
                                                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                                                <RowDefinition Height="*"></RowDefinition>
                                                                                                <RowDefinition Height="Auto"></RowDefinition>
                                                                                        </Grid.RowDefinitions>
                                                                                        
                                                                                        <TextBlock Grid.Row="0" x:Name="BodyFrame_RightBar_TopActive_UsersBox_User10Border_Frame_UserName"
                                                                                                Text="Username" Foreground="White" FontFamily="A" FontSize="14" />
                                                                                        <TextBlock Grid.Row="2" x:Name="BodyFrame_RightBar_TopActive_UsersBox_User10Border_Frame_TopCounter"
                                                                                                Text="Books read: N" Foreground="White" FontFamily="A" FontSize="14" />
                                                                                </Grid>
                                                                                
                                                                                <TextBlock x:Name="BodyFrame_RightBar_TopActive_UsersBox_User10Border_Frame_TopNumber"
                                                                                        Grid.Column="2" Text="#10" Foreground="White" FontFamily="A" FontSize="20" FontWeight="Bold" 
                                                                                        TextAlignment="Center" HorizontalAlignment="Right" />
                                                                        </Grid>
                                                                </Border>
                                                        </StackPanel>
                                                </StackPanel>
                                        </Border>
                                        
                                        <Border x:Name="BodyFrame_RightBar_GenresBorder" Background="#1C1C1C" CornerRadius="5" Padding="0 0 0 15">
                                                <StackPanel x:Name="BodyFrame_RightBar_Genres" Orientation="Vertical">
                                                        <Border x:Name="BodyFrame_RightBar_Genres_TitleBorder" Height="45" BorderThickness="0 0 0 1" 
                                                                BorderBrush="#E47F09" Margin="0 15 0 0" Padding="15 0" >
                                                                <TextBlock x:Name="BodyFrame_RightBar_Genres_TitleText" Foreground="White" FontFamily="Arial" 
                                                                           FontSize="22" VerticalAlignment="Center" Text="Genres"/>
                                                        </Border> 
                                                        
                                                        <WrapPanel x:Name="BodyFrame_RightBar_Genres_Box" Orientation="Horizontal" Margin="5 10">
                                                                <WrapPanel.Resources>
