                                                        </WrapPanel>
                                                        
                                                        <Border>
                                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Cursor="Hand" >
                                                                        <TextBlock HorizontalAlignment="Center" Text="Expand" Foreground="#9C9C9C" FontFamily="Inter" FontSize="16" />
                                                                        <Image Source="/Images/ExpandoIcon.png" Margin="5 0 0 0"></Image>
                                                                </StackPanel>
                                                        </Border>
                                                </StackPanel>
                                        </Border>
                                </StackPanel>
                        </Grid>
                        
                        <Grid Grid.Column="0" Grid.Row="2" x:Name="Foot" ColumnSpan="3" Background="#1C1C1C">
                                <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="1280" />
                                        <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <Grid Grid.Column="1" x:Name="FootFrame" >
                                        <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*" />
                                                <ColumnDefinition Width="0.4*" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0" x:Name="FootFrame_MainInfo" Margin="25 15 25 25" Orientation="Vertical">
                                                <StackPanel Orientation="Horizontal" x:Name="FootFrame_MainInfo_ChangeTheme">
                                                        <TextBlock x:Name="FootFrame_MainInfo_ChangeTheme_Text" Text="Theme" Foreground="White" FontFamily="Arial" FontSize="32"/>
                                                        
                                                        <Border x:Name="FootFrame_MainInfo_ChangeTheme_WhiteTheme" Height="40" Width="40" Background="White" CornerRadius="3" 
                                                                Margin="20 0 15 0" BorderThickness="1" BorderBrush="#8A8A8A" Cursor="Hand" >
                                                                <TextBlock x:Name="FootFrame_MainInfo_ChangeTheme_WhiteTheme_Text" Text="A" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                                                                           FontFamily="Arial" FontSize="22" Margin="7 2" Foreground="Black"/>
                                                                
                                                                <Border.ToolTip>
                                                                        <ToolTip Background="#333335" BorderThickness="0" BorderBrush="Transparent"
                                                                                 Placement="RelativePoint" HorizontalOffset="-25" VerticalOffset="-40">
                                                                                <TextBlock Text="White theme" Foreground="White" Padding="6"
                                                                                        FontFamily="Arial" FontSize="12" />
                                                                        </ToolTip>
                                                                </Border.ToolTip>
                                                        </Border>
                                                        
                                                        <Border x:Name="FootFrame_MainInfo_ChangeTheme_DarkTheme" Height="40" Width="40" Background="Black" CornerRadius="3" 
                                                                BorderThickness="1" BorderBrush="White" Cursor="Hand">
                                                                <TextBlock x:Name="FootFrame_MainInfo_ChangeTheme_DarkTheme_Text" Text="A" HorizontalAlignment="Left" VerticalAlignment="Bottom" 
                                                                           FontFamily="Arial" FontSize="22" Margin="7 2" Foreground="White"/>
                                                                
                                                                <Border.ToolTip>
                                                                        <ToolTip Background="#333335" BorderThickness="0" BorderBrush="Transparent"
                                                                                 Placement="RelativePoint" HorizontalOffset="-25" VerticalOffset="-40">
                                                                                <TextBlock Text="Dark theme" Foreground="White" Padding="6"
                                                                                        FontFamily="Arial" FontSize="12" />
                                                                        </ToolTip>
                                                                </Border.ToolTip>
                                                        </Border>
                                                </StackPanel>
                                                
                                                <TextBlock x:Name="FootFrame_MainInfo_CopyrightInfringement" Foreground="White" FontFamily="Arial" FontSize="22" Margin="0 10"
                                                           Text="In cases of copyright infringement - please contact info@schoollibrary.me"/>
                                                
                                                <StackPanel x:Name="FootFrame_MainInfo_About" Orientation="Horizontal">
                                                        <StackPanel x:Name="FootFrame_MainInfo_About_Feedback" Orientation="Horizontal">
                                                                <TextBlock x:Name="FootFrame_MainInfo_About_Feedback_Text" Foreground="#E47F09" FontFamily="Arial" FontSize="22" Text="Feedback" Cursor="Hand" />
                                                                <Border Width="5" Height="5" CornerRadius="100" Background="White" Margin="10" />
                                                        </StackPanel>
                                                        
                                                        <StackPanel x:Name="FootFrame_MainInfo_About_ForCopyrightHolders" Orientation="Horizontal">
                                                                <TextBlock x:Name="FootFrame_MainInfo_About_ForCopyrightHolders_Text" Foreground="#E47F09" FontFamily="Arial" FontSize="22" Text="For copyright holders" Cursor="Hand" />
