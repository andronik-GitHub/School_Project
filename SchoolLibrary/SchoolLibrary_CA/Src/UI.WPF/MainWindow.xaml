                                                                <Border Width="5" Height="5" CornerRadius="100" Background="White" Margin="10" />
                                                        </StackPanel>
                                                        
                                                        <StackPanel x:Name="FootFrame_MainInfo_About_DMCA" Orientation="Horizontal">
                                                                <TextBlock x:Name="FootFrame_MainInfo_About_DMCA_Text" Foreground="#E47F09" FontFamily="Arial" FontSize="22" Text="DMCA" Cursor="Hand" />
                                                                <Border Width="5" Height="5" CornerRadius="100" Background="White" Margin="10" />
                                                        </StackPanel>
                                                        
                                                        <StackPanel x:Name="FootFrame_MainInfo_About_License" Orientation="Horizontal">
                                                                <TextBlock x:Name="FootFrame_MainInfo_About_License_Text" Foreground="#E47F09" FontFamily="Arial" FontSize="22" Text="License" Cursor="Hand" />
                                                        </StackPanel>
                                                </StackPanel>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Column="1" x:Name="FootFrame_Copyright" Orientation="Horizontal" VerticalAlignment="Bottom" HorizontalAlignment="Right"
                                                    Margin="25">
                                                <TextBlock Text="©2023" Foreground="White" FontFamily="Arial" FontSize="22" Margin="0 0 5 0" />
                                                <TextBlock Text="SchoolLibrary" Foreground="#E47F09" FontFamily="Arial" FontSize="22" Margin="5 0 0 0" Cursor="Hand" />
                                        </StackPanel>
                                </Grid>
                        </Grid>
                </Grid>
        </ScrollViewer>
</Window>
